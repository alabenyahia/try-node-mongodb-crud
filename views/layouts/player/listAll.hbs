<table class="striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Nationality</th>
        <th>Age</th>
    </tr>
    </thead>

    <tbody>
    {{#each players}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.nationality}}</td>
            <td>{{this.age}}</td>
            <td>
                <a href="/player/{{this._id}}"><i class="material-icons">edit</i></a>
                <a href="/player/delete/{{this._id}}"
                   onclick="return confirm('Are you sure you want to delete this player')"><i class="material-icons">delete</i></a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<a class="btn waves-effect waves-light pink" href="/player">
    Add Player<i class="material-icons right">add</i>
</a>



